{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "./dist-electron",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "rootDir": "."
  },
  "include": ["vite.config.ts", "electron/**/*.ts"],
  "exclude": ["node_modules"]
}
