{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "outDir": "./dist-electron",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/types/*": ["src/types/*"]
    },
    "noImplicitAny": false
  },
  "include": ["vite.config.ts", "electron/**/*.ts", "src/types/**/*.ts"],
  "exclude": ["node_modules", "dist-electron"]
}
