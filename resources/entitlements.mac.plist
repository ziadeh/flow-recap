<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow the app to run with hardened runtime -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>

    <!-- Allow the app to access user-selected files -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Allow unsigned executable memory (required for Electron) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>

    <!-- Allow DYLD environment variables (may be needed for development) -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>

    <!-- Microphone access for audio recording -->
    <key>com.apple.security.device.audio-input</key>
    <true/>

    <!-- Screen recording permission for ScreenCaptureKit (macOS 13+) -->
    <!-- Required to capture app audio without virtual cables -->
    <key>com.apple.security.device.camera</key>
    <true/>
</dict>
</plist>
